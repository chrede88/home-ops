{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "customManagers": [
    {
      "customType": "regex",
      "description": ["Process Talos"],
      "managerFilePatterns": [
        "/(^|/)cluster/talos/.+\\.ya?ml$/",
        "/(^|/)cluster/kubernetes/app/system-upgrade/.+\\.ya?ml$/"
      ],
      "matchStrings": [
        "depName=(?<depName>.*?) datasource=(?<datasource>.*?)\\n.*?: (?<currentValue>.*)"
      ]
    }
  ]
}
